<div id="next-occurences" class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title"><span class="glyphicon glyphicon-time"></span> {{ 'zone.next_occurrences.title'|trans }}</h2>
    </div>
    <ul class="list-group">
    {% for branchOccurrence in branchOccurrences %}
        <li class="list-group-item">
            {% if loop.index == 1 %}
                <strong>
                    {{ branchOccurrence.begin|format_datetime('eeee dd MMMM') }}
                </strong>
                <strong>
                    {{ branchOccurrence.begin|format_datetime('HH:mm') }} - {{ branchOccurrence.end|format_time('HH:mm') }}
                </strong>
            {% else %}
                {{ branchOccurrence.begin|format_datetime('eee dd MMM HH:mm') }} - {{ branchOccurrence.end|format_time('HH:mm') }}
            {% endif %}
        </li>
    {% endfor %}
    </ul>
    <div class="panel-footer">
        <a href="{{ path('open_miam_miam.branch.producers.attendance', { 'branchSlug': branch.slug }) }}">{{ 'zone.next_occurrences.footer'|trans }}</a>
    </div>
</div>
