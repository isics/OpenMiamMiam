{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch, 'homepage': false} %}
    {% block content %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-branch-producers-attendance">
                <thead>
                    <tr>
                        <th>{{ "producer"|trans }}</th>
                        {% for occurrence in branchOccurrences %}
                            <th class="text-center">{{ occurrence.begin|date("d/m") }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for producer in producers %}
                        <tr>
                            <td>{{ producer.name }}</td>
                            {% for occurrence in branchOccurrences %}
                                <td class="text-center">
                                    {% for attendance in occurrence.producerAttendances %}
                                        {% if (attendance.producer == producer) and (attendance.isAttendee) %}
                                            <span class="glyphicon glyphicon-check"></span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endblock %}
{% endembed %}
