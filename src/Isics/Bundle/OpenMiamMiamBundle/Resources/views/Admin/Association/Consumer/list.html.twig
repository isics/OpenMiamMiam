{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    <h1>{{ 'admin.association.consumers.list.title'|trans }}</h1>

    {% if subscriptions|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-sales-orders">
                <thead>
                <tr>
                    <th>{{ 'admin.association.consumers.list.ref'|trans }}</th>
                    <th>{{ 'admin.association.consumers.list.name'|trans }}</th>
                    <th>{{ 'admin.association.consumers.list.credit'|trans }}</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for subscription in subscriptions %}
                    {% set user = subscription.user %}
                    <tr>
                        {% if user %}
                            <td>{{ user|format_consumer_ref }}</td>
                            <td>{{ format_user_identity(app.user) }}</td>
                        {% else %}
                            <td>-</td>
                            <td>{{ 'admin.association.consumers.list.anonymous'|trans }}</td>
                        {% endif %}
                        <td>{{ association.getSubscriptionForUser(user).credit|number_format_currency(open_miam_miam.currency) }}</td>
                        <td>
                            {% if user %}
                                <a href="{{ path('open_miam_miam.admin.association.consumer.list_payments', {'id': association.id, 'consumerId': user.id}) }}" class="btn btn-primary btn-xs" title="{{ 'admin.association.consumers.list.payments'|trans }}"><span class="glyphicon glyphicon-euro"></span></a>
                            {% else %}
                                <a href="{{ path('open_miam_miam.admin.association.consumer.list_anonymous_payments', {'id': association.id}) }}" class="btn btn-primary btn-xs" title="{{ 'admin.association.consumers.list.payments'|trans }}"><span class="glyphicon glyphicon-euro"></span></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ pagerfanta(subscriptions, 'default', pagerfanta_opts) }}
    {% else %}
        {% include 'IsicsOpenMiamMiamBundle:Admin:empty.html.twig' with {'message': 'admin.association.consumers.list.no_consumer'|trans} %}
    {% endif %}
{% endblock %}
