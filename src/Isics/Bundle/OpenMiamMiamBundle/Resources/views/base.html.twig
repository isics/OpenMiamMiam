<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="UTF-8" />
        {% block stylesheet %}
            {% include 'IsicsOpenMiamMiamBundle::baseStylesheets.html.twig' %}
        {% endblock %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            {% javascripts
                'js/html5shiv.js'
                'js/respond.min.js'
                filter='?uglifyjs2'
                output='cache/js/*.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        <![endif]-->
        <link rel="icon" type="image/png" href="/favicon.png" />
        <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" /><![endif]-->
    </head>
    <body{% block body_attributes %}{% endblock %}>
        <div class="container">
            {% block header_nav %}
                <ul id="header-nav" class="nav nav-pills pull-right">
                    {% if app.user %}
                        <li>
                            <a type="button" class="dropdown-toggle" data-toggle="dropdown">
                                {{ app.user }}
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                <li>
                                    <a href="{{ path('fos_user_profile_edit') }}">
                                        <span class="glyphicon glyphicon-user"></span>
                                        {{ 'my_profile'|trans }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_profile_orders') }}">
                                        <span class="glyphicon glyphicon-list"></span>
                                        {{ 'my_sales_orders'|trans }}
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="{{ path('fos_user_security_logout') }}">
                                        <span class="glyphicon glyphicon-off"></span>
                                        {{ 'logout'|trans }}
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_profile_edit') }}">
                                <span class="glyphicon glyphicon-user"></span>
                                {{ 'my_account'|trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            {% endblock %}

            {% block header %}
                <header>
                    <div id="header-logo">
                        <a href="{{ path('open_miam_miam.homepage') }}">{% include 'IsicsOpenMiamMiamBundle::baseLogo.html.twig' %}</a>
                    </div>
                </header>
            {% endblock %}

            {% block global_content %}
                {% include 'IsicsOpenMiamMiamBundle::messages.html.twig' %}
                {% block content %}{% endblock %}
            {% endblock %}
        </div>

        {% block footer %}
            <footer>
                <hr />
                <div class="container">
                    {% include 'IsicsOpenMiamMiamBundle::copyright.html.twig' %}
                </div>
            </footer>
        {% endblock %}

        {% block javascript %}
            {% include 'IsicsOpenMiamMiamBundle::baseJavascripts.html.twig' %}
        {% endblock %}
    </body>
</html>